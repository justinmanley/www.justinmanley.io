#!/bin/sh

# Usage: 
# ./github <number of updates>

# Example:
# ./github 5

xsltproc --stringparam predicate $1 scripts/xslt/github-prune.xslt data/raw/github.xml \
	| xsltproc --stringparam num $2 scripts/xslt/github-limit.xslt - \
	| sed 's/&lt;/</g' \
	| sed 's/&gt;/>/g' \
	> data/feeds/github.xml