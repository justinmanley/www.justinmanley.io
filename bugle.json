{
	"options": {
		"assets": "site/assets",
		"bower": "assets/bower_components",
		"engine": "handlebars",
		"data": "data/config/*.yml",
		"layoutdir": "src/templates/layouts",
		"helpers": ["handlebars-helper-compose", "~/prog/handlebars-helpers"]
	},
	"markdown": {
		"options": {
			"ext": ".html",
			"layout": "page.hbs",
			"flatten": true,
			"feeds": "data/feeds/*.html"
		},
		"files": {
			"site/": ["src/**.md"]
		}
	}
}