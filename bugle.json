{
	"options": {
		"assets": "site/assets",
		"engine": "handlebars",
		"layoutdir": "templates/layouts",
		"helpers": "handlebars-helper-compose"
	},
	"markdown": {
		"options": {
			"ext": ".html",
			"layout": "page.hbs",
			"flatten": true,
			"feeds": "data/feeds/*"
		},
		"files": {
			"site/": ["src/*.md"]
		}
	}
}