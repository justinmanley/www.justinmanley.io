{
	"options": {
		"assets": "site/assets",
		"bower": "assets/bower_components",
		"engine": "handlebars",
		"data": "data/config/*.yml",
		"layoutdir": "src/templates/layouts",
		"helpers": ["handlebars-helper-compose", "helper-moment"]
	},
	"markdown": {
		"options": {
			"ext": ".html",
			"layout": "page.hbs",
			"flatten": true
		},
		"files": {
			"site/": ["src/**.md"]
		}
	}
}